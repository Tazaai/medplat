# ~/medplat/frontend/Dockerfile

# ---------- Build stage ----------
FROM node:18 AS build
WORKDIR /app

# Install deps
COPY package*.json ./
RUN npm install

# Copy source and build
COPY . .
RUN npm run build

# ---------- Serve stage ----------
FROM node:18
WORKDIR /app

# Install static server
RUN npm install -g serve

# Copy build output from build stage
COPY --from=build /app/dist ./dist

# Cloud Run uses $PORT
ENV PORT=8080
EXPOSE 8080

# Start frontend
CMD ["serve", "-s", "dist", "-l", "8080"]
